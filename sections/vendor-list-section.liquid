<style>
.vendor__section{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-evenly;
}
.vendor__section a{
    flex: 1;
    display: flex;
    justify-content: center;
    margin: 15px;
}
</style>

<hr>
<div class="vendor__section">
    {% if section.settings.title != blank %}
        <div class="section-header">
            <p class="h1 section-header--left">{{ section.settings.title | escape }}</p>
        </div>
    {% endif %}
</div>
<div class="row-negative-bottom vendor__section">
    {% for block in section.blocks %}
        {% assign collection = collections[block.settings.link_collection] %}
        <a href={{collection.url}}>
            <img src="{{collection.image.src | img_url: '150x150'}}" alt="{{collection.image.alt}}">
        </a>
    {% endfor %}
</div>
{% schema %}
{
    "name": "Vendor Section",
    "settings":[
        {
            "type": "text",
            "id": "title",
            "label": "Heading"
        }
    ],
    "blocks":[
        {
            "type": "collection",
            "name": "Vendor Info",
            "settings":[
                {
                    "type": "collection",
                    "id": "link_collection",
                    "label": "Link Collection"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Recommendation",
            "name":"Vendor Section"
        }
    ]
}
{% endschema %}